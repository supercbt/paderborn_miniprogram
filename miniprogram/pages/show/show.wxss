}


.selects{
    display: flex;
    align-items: center;
    justify-content: center;
}
.select{
 display: flex;
 color:white;
 align-items: center;
 justify-content: center;
 width: 50%;
 margin-top: 30rpx;
}

.select image:first-child{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
}

.img{
  width:26rpx;
  height:26rpx;
  margin-left:10rpx;
}
.info{
  display: flex;
  color:white;
}
.now{
  width: 50%;
  margin:0;
