
page {
  background:white
}
.card{
  margin-top: 30rpx;
  width: 90%;
  margin-left: 5%;
  height: 460rpx;
  background:  	#4169E1;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 32rpx 0 rgba(74,96,142,0.16) ;
}
.title{
  width: 100%;
  color:white;
  display: flex;
  justify-content: center;
  padding-top:20rpx;
  font-size:36rpx;
  font-weight:500;
}
.container{
  display: flex;
}
.led{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.circle{
  margin-top:30rpx;
  width: 150rpx;
  height:150rpx;
  border-radius: 50%;
  background:  	#4169E1	;
  border:8rpx solid	#FB70A3; 	
  /* #DB7093 #EE4511 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.hover{
  opacity: 0.5;
}

.green{
border:8rpx solid	#00CED1;
}

.circle image{
  width: 60rpx;
  height:60rpx;
}

.state{
margin-top:30rpx;
color:white;
font-size:32rpx;
